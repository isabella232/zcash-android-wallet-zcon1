    <style name="ZcashTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ZcashTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ZcashTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Zcash.Progressbar.Indeterminate" parent="ZcashBaseTheme">
        <item name="colorControlActivated">@color/progress_bar_active</item>
    </style>

    <style name="Zcash.TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:background">@color/zcashPurple_dark</item>
        <item name="tabIndicatorColor">@color/text_light</item>
        <item name="tabTextColor">@color/text_light</item>
        <item name="tabRippleColor">@color/zcashPurple</item>
    </style>

    <style name="Zcash.Button.Outline" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/zcashPurple_dark</item>
    </style>

    <style name="Zcash.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Zcash.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:colorControlActivated">@color/zcashYellow</item>
        <item name="android:colorControlNormal">@color/zcashRed</item>
        <item name="buttonBarPositiveButtonStyle">@style/Zcash.Button.Alert</item>
        <item name="buttonBarNegativeButtonStyle">@style/Zcash.Button.Alert</item>
        <item name="buttonBarNeutralButtonStyle">@style/Zcash.Button.Alert</item>
    </style>

    <style name="Zcash.Button.Alert" parent="Widget.MaterialComponents.Button.TextButton">
<!--        <item name="rippleColor">@color/colorAccent</item>-->
        <item name="android:textColor">@color/colorAccent</item>
    </style>

