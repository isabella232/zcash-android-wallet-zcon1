<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="activity" type="cash.z.android.wallet.ui.activity.MainActivity" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Host Fragment -->
        <fragment
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/mobile_navigation" />

        <!-- Scan Area -->
        <FrameLayout
            android:id="@+id/camera_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- App bar -->
        <include
            android:id="@+id/main_app_bar"
            layout="@layout/include_main_app_bar"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />


        <!-- Bottom Navigation (Custom) -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_navigation_zcon1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="3:1"
            app:layout_constraintStart_toStartOf="parent"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/lottie_navigation_zcon1" />

        <View
            android:id="@+id/nav_button_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="@{() -> activity.onNavButtonSelected(0)}"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.21"
            app:layout_constraintDimensionRatio="H,1:1.08"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/nav_button_1"
            />

        <View
            android:id="@+id/nav_button_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="@{() -> activity.onNavButtonSelected(1)}"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.21"
            app:layout_constraintDimensionRatio="H,1:1.08"
            app:layout_constraintStart_toEndOf="@id/nav_button_0"
            app:layout_constraintEnd_toStartOf="@id/nav_button_2"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/nav_button_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="@{() -> activity.onNavButtonSelected(2)}"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.21"
            app:layout_constraintDimensionRatio="H,1:1.08"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/nav_button_3"
            app:layout_constraintStart_toEndOf="@id/nav_button_1" />

        <View
            android:id="@+id/nav_button_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="@{() -> activity.onNavButtonSelected(3)}"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.21"
            app:layout_constraintDimensionRatio="H,1:1.08"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/nav_button_2"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="nav_button_0,nav_button_1,nav_button_2,nav_button_3,lottie_navigation_zcon1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
