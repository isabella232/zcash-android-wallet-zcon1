<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_first_run_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlSymmetry">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_content_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="32dp" />

    <ImageView
        android:id="@+id/image_header_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="64dp"
        android:padding="20dp"
        android:background="@drawable/background_circle"
        app:srcCompat="@drawable/ic_onboarding_scan"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/guideline_content_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/container_title"
        app:layout_constraintVertical_chainStyle="spread_inside"
        tools:ignore="RtlHardcoded" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_header_icon"
        app:layout_constraintStart_toStartOf="@id/image_header_icon"
        app:layout_constraintBottom_toTopOf="@id/container_scan">

        <TextView
            android:id="@+id/text_title_page_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="@string/onboarding_title_page_1"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_size_h4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_subtitle_page_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-thin"
            android:text="@string/onboarding_subtitle_page_1"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_size_body_1"
            app:layout_constraintTop_toBottomOf="@id/text_title_page_1"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_title"
        app:layout_constraintBottom_toTopOf="@id/text_disclaimer">

        <ImageView
            android:id="@+id/image_scan_icon"
            android:layout_width="240dp"
            android:layout_height="160dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_onboarding_scan" />

        <Button
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Skip"
            android:textColor="@color/text_light"
            android:theme="@style/Zcash.Button.Outline"
            app:layout_constraintStart_toStartOf="@id/image_scan_icon"
            app:layout_constraintEnd_toStartOf="@id/button_first_run_scan"
            app:layout_constraintTop_toBottomOf="@id/image_scan_icon" />

        <Button
            android:id="@+id/button_first_run_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="onScanQr"
            android:text="Scan"
            android:textColor="@color/text_light"
            app:layout_constraintStart_toEndOf="@id/button_next"
            app:layout_constraintEnd_toEndOf="@id/image_scan_icon"
            app:layout_constraintTop_toBottomOf="@id/image_scan_icon" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_disclaimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You will be able to send and receive TAZ\nlike a normal wallet. More importantly,\nyou can get free SWAG with it!"
        android:textColor="@color/text_light"
        android:textSize="@dimen/text_size_body_1"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/footer_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_scan" />
    <View
        android:id="@+id/footer_placeholder"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toBottomOf="@id/text_disclaimer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>